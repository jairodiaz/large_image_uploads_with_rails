
<% if @user.key.index("${filename}") %>
  <%= direct_upload_form_for @uploader do |f| %>
    <%= f.file_field :picture %>
    <%#f.submit "Upload Directly!" %>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :picture_key %><br />
  <%= f.text_field :key, size: 100 %><br />

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
